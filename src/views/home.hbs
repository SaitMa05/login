    <link rel="stylesheet" href="./toastr.min.css">
    <link rel="stylesheet" href="/style.css">
</head>


<body>

    <div id="app">
        <div class="tiempo">
            <div id="countdown">10:00</div>
        </div>


        <div class="add-letra" id="palabraDiv">
            <input class="input agregar-palabra" type="text" id="entradaPalabra" placeholder="Ingrese una palabra">
            <button class="btn btn-agregar btnAgregar" onclick="agregarPalabra()">Agregar Palabra</button>
            <button class="btn btn-iniciar btnComenzar" onclick="iniciarJuego()">Iniciar Juego</button>
        </div>

        <div id="fireworks-container"></div>
        <script src="https://cdn.jsdelivr.net/npm/fireworks-js/dist/fireworks.js"></script>

        <div class="contenedor">
            <div class="aparatados">
                <div class="palabras">
                    <div class="puntaje">
                        <p>Puntaje:</p>
                        <p class="puntaje-num"></p>
                    </div>
                    <div>
                        <p class="titulo"></p>
                    </div>
                    <div class="">
                        <p class="palabras-text tituloPalabra">Aun no hay una palabra</p>
                    </div>
                    <div id="listaPalabrasContainer palabras-cont w100">
                        <div id="listaPalabras"></div>
                    </div>

                </div>

                <div class="sopa">
                    <div id="gameContainer">
                        <div id="sopaDeLetras" class="style"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="/script.js"></script>

    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> -->
</body>

</html>